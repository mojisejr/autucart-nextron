// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Slot {
  id         Int       @id @default(autoincrement())
  hn         String?   @unique
  timestamp  DateTime? @updatedAt
  locked     Boolean   @default(true)
  registered Boolean   @default(false)
  opening    Boolean   @default(false)
  userId     String?
  user       User?     @relation(fields: [userId], references: [stuffId])
}

model User {
  id      Int    @id @default(autoincrement())
  stuffId String @unique
  role    String @default("USER")
  Slot    Slot[]
}

model Setting {
  id       Int     @id @default(autoincrement())
  platform String? @default("LINUX")
  path     String?
  baudRate Int     @default(19200)
  dataBits Int     @default(8)
  stopBits Int     @default(1)
  parity   String  @default("none")
  autoOpen Boolean @default(true)
}
